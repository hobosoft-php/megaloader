{
    "name": "hobosoft/megaloader",
    "version": "1.0.0",
    "description": "PHP mega loader",
    "minimum-stability": "dev",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Hobosoft\\MegaLoader\\": "src/",
            "Hobosoft\\MegaLoader\\Tests\\": "tests/"
        }
    },
    "require": {
        "psr/log": "^3.0@dev",
        "psr/simple-cache": "^3.0@dev",
        "hobosoft/config": "*",
        "hobosoft/fileloaders": "*",
        "hobosoft/finders": "*",
        "symfony/yaml": "7.2.x-dev",
        "ext-apcu": "*",
        "spatie/ignition": "^1.15"
    },
    "require-dev": {
        "nunomaduro/patrol": "dev-master",
        "phpat/phpat": "dev-master",
        "phpstan/extension-installer": "1.4.x-dev",
        "pdepend/pdepend": "2.16.2"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    }
}
